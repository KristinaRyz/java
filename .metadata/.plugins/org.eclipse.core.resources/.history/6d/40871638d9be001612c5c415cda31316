
public class Tests {

	public static int sumEvensArray(int ar[]){
		int sum = 0;
		for(int i = 0; i<ar.length; i++){
			if(ar[i]%2==0){
				sum += ar[i];
			}
		}
		return sum;
	}

	
	
	public static int searchMaxInd(int ar[]){
		int max = ar[0], maxInd = 0;
		for(int i = 1; i<ar.length; i++){
			if(ar[i]>max)
		    max=ar[i];
			maxInd = i;
		}
		return max;
	}
}
