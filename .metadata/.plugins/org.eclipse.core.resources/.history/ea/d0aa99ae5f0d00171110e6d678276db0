import java.io.File;
import java.io.IOException;

public class CreateFolderAndFile {

	public static void main(String[] args) throws IOException {
String folderName = "folder ";
String disk = "C:\\DISK";
String fileName = "file ";
String fileExt = ".txt";

File f1= null;
File f2 = null;
String path = disk + folderName + 1 + "\\" + "file" + 1 + fileExt;
f1 = new File(path);
f1.mkdirs();
f2.createNewFile();

	}

}
