import java.io.File;
import java.io.IOException;

public class CreateFolderAndFile {

	public static void main(String[] args) throws IOException {
String folderName = "folder ";
String disk = "C:\\DISK";
String fileName = "file ";
String fileExt = ".txt";

File f1= null;
File f2 = null;
String path = disk + "\\" + folderName + 1;
f1 = new File(path);
f1.mkdirs();

String aPath = f1.getAbsolutePath() + "\\" + fileName + 1 + fileExt;
f2 = new File(path);
f2.createNewFile();

	}

}
